pipeline {
    agent any

    stages {
        stage('git_Clone') {
            steps {
                echo 'This is to clone the code'
                git 'https://github.com/VikasSajjan/Helloworld-latest.git'
            }
        }
        stage('build') {
            steps {
                echo 'this is to build the code'
                sh 'yum install maven -y'
                sh 'mvn clean package'
            }
        }
        stage('test'){
            steps {
                echo 'this is to test the code'
            }
        }
        stage('deploy') {
            steps {
                echo 'this is to deploy hello World'
            }
        }
        
    }
}
